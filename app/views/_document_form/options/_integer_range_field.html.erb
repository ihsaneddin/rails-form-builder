

<div class="mb-3">
  <%= f.label :begin_from, class: "form-label" %>
  <div class="row align-items-center">
    <div class="col">
      <div class="form-check form-check-inline">
        <%= f.radio_button :begin_from, "unrestricted", class: "form-check-input begin-type" %>
        <%= f.label "Unrestricted", class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :begin_from, "value", class: "form-check-input begin-type" %>
        <%= f.label "Specific Value", class: "form-check-label" %>
      </div>
      <div class="form-check-inline">
        <%= f.number_field :begin_value, id: "begin-value", class: "form-control #{'d-none' unless options.begin_from == 'value'}", placeholder: "Start from" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :begin_from, "offsets_before_end", class: "form-check-input begin-type" %>
        <%= f.label "Offsets before end", class: "form-check-label" %>
      </div>
      <div class="form-check-inline">
        <%= f.number_field :offsets_before_end, id: "begin-offset-before-end", class: "form-control #{'d-none' unless options.begin_from == 'offsets_before_end'}", placeholder: "Offset before end"%>
      </div>
    </div>
  </div>
</div>
<div class="mb-3">
  <div class="mb-3">
    <%= f.check_box :fixed_begin, class: "form-check-input" %>
    <%= f.label " Fixed begin value?", class: "form-check-label" %>
  </div>
</div>
<div class="mb-3">
  <%= f.label :end_to, class: "form-label" %>
  <div class="row align-items-center">
    <div class="col">
      <div class="form-check form-check-inline">
        <%= f.radio_button :end_to, "unrestricted", class: "form-check-input end-type" %>
        <%= f.label "Unrestricted", class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :end_to, "value", class: "form-check-input end-type" %>
        <%= f.label "Specific Value", class: "form-check-label" %>
      </div>
      <div class="form-check-inline">
        <%= f.number_field :end_value, id: "end-value", class: "form-control #{'d-none' unless options.end_to == 'value'}", placeholder: "End to" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :end_to, "offsets_since_begin", class: "form-check-input end-type" %>
        <%= f.label "Offsets since begin", class: "form-check-label" %>
      </div>
      <div class="form-check-inline">
        <%= f.number_field :offsets_since_begin, id: "end-offset-since-begin", class: "form-control #{'d-none' unless options.end_to == 'offsets_since_begin'}", placeholder: "Offset since begin"%>
      </div>
    </div>
  </div>
</div>
<div class="mb-3">
  <div class="mb-3">
    <%= f.check_box :fixed_end, class: "form-check-input" %>
    <%= f.label " Fixed end value?", class: "form-check-label" %>
  </div>
</div>
<div class="mb-3">
  <%= f.label :lower_bound_check, class: "form-label" %>
  <div class="input-group">
    <%= f.select :minimum_gap_check, options_for_enum_select(options.class, :minimum_gap_check, options.minimum_gap_check), {}, class: "form-select col-2" %>
    <%= f.number_field :minimum_gap_value, class: "col-10", step: 1, min: 0, placeholder: "Lowest limit"%>
  </div>
</div>
<div class="mb-3">
  <%= f.label :maximum_gap_check, class: "form-label" %>
  <div class="input-group">
    <%= f.select :maximum_gap_check, options_for_enum_select(options.class, :maximum_gap_check, options.maximum_gap_check), {}, class: "form-select col-2" %>
    <%= f.number_field :maximum_gap_value, class: "col-10", step: 1, min: 0, placeholder: "Highest limit"%>
  </div>
</div>
