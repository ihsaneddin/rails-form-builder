<% f.object.send("build_#{field.name}") unless f.object.send(field.name) %>

<div class="row mb-3">
  <div class="col-12">
    <%= f.label field.label, class: "form-label" %>
  </div>
  <%= f.fields_for field.name do |ff| %>
    <div class="col-6">
      <%= ff.number_field :begin, class: 'form-control', id: "#{field.id}_begin", required: field.required, **field.begin_options %>
      <% unless ff.object.errors[:begin].blank? %>
        <p class="form-text text-danger">
          <%= ff.object.errors.messages[:begin].uniq.join(", ") %>
        </p>
      <% end %>
    </div>
    <div class="col-6">
      <%= ff.number_field :end, class: 'form-control', id: "#{field.id}_end", required: field.required, **field.end_options %>
      <% unless ff.object.errors[:end].blank? %>
        <p class="form-text text-danger">
          <%= ff.object.errors.messages[:end].uniq.join(", ") %>
        </p>
      <% end %>
    </div>
  <% end %>
  <% if field.hint %>
    <span class="form-text">
      <%= field.hint %>
    </span>
  <% end %>
</div>