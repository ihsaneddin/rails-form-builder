<%= form_with(model: [form, section], local: true) do |f| %>

  <%= display_error_validations section %>

  <fieldset>
    <div class="mb-3">
      <%= f.label :title, class: "form-label", for: "form-name" %>
      <%= f.text_field :title, class: "form-control", placeholder: "Title", id: "form-name" %>
    </div>
    <div class="mb-3">
       <%= f.check_box :headless, class: "form-check-input" %>
      <%= f.label " Hide title", class: "form-check-label" %>
    </div>
    <div class="mb-3">
      <%= f.label :description, class: "form-label", for: "form-description" %>
      <%= f.text_area :description, class: "form-control", placeholder: "Description", id: "form-description" %>
    </div>

    <hr />
    <div class="mt-4">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </fieldset>


<% end %>