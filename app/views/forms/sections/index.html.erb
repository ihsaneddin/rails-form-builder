<div class="row gy-3">
  <div class="col-12 d-flex justify-content-between">
    <h2>Section</h2>
    <%= link_to "New Section", new_form_section_path, class: "btn btn-primary"%>
  </div>
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col" width="30%">Title</th>
                  <th scope="col" width="50%">Description</th>
                  <th scope="col" width="10%">Position</th>
                  <th scope="col" width="10%"></th>
                </tr>
              </thead>
              <tbody>
                <% @sections.each do |section| %>
                  <tr>
                    <td><%= section.title %></td>
                    <td><%= section.description %></td>
                    <td><%= section.position.to_i + 1 %></td>
                    <td>
                      <%= link_to "Edit", edit_form_section_path(@form, section), class: "btn btn-info text-light" %>
                      <%= link_to "Destroy", form_section_path(@form, section), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure?"} %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
